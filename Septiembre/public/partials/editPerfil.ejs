<div class="content">
    <div class="loginPannel content">
        <form class="edit" action="/editPerfil" method="POST">
            <div>
                Contrase√±a: 
                <input class="write pass" type="password" name="password" placeholder="***">
                <% if (config.error!=null && errores.password) { %>
                <span class="rojo">
                    <%= errores.password.msg %> </span>
                <% } %>
            </div>
            <div>
                Nombre usuario: 
                <input class="write name" type="text" name="userName" placeholder="<%=(locals.usuario.userName)%>">
                <% if (config.error!=null &&  errores.userName) { %>
                <span class="rojo">
                    <%= errores.userName.msg %> </span>
                <%}%>
            </div>
            <div>Email: <input class="write name" type="text" name="email" placeholder="<%=(locals.usuario.email)%>">
                <% if (config.error!=null &&  errores.userName) { %>
                <span class="rojo">
                    <%= errores.userName.msg %> </span>
                <%}%>
            </div>
            Sexo
            <input class="write gender" type="radio" name="gender" value="male" <%=(locals.usuario.gender=="mal")?"checked":"";%> >Male 
            <input type="radio" name="gender" value="female"  <%=(locals.usuario.gender=="fem")?"checked":"";%>> Female
            <input type="radio" name="gender" value="other"  <%=(locals.usuario.gender=="oth")?"checked":"";%>> Other<br>
            Fecha de nacimiento <input class="write date" type="date" name="fechaNac" max="2000-0-0"placeholder="<%=(locals.usuario.birth)%>"><br>
            Imagen de perfil<input class="write picture" type="file" name="imagenPerfil"><br>
            <input type="submit" name="login">
        </form>
    </div>
</div>
<% if(config.error!=null) %>
<span class="error">
    <%- config.error %></span>
</div>
