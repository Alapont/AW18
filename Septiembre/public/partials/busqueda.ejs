<div class="content">
    <h2 class=encabezado>Buscando a
        <%= locals.query %>
    </h2>
    <% if (locals.busqueda == null || locals.busqueda.length==0) {%>
    <p>No hay resultados</p>
    <% }else{ %>
      <% busqueda.forEach((amigo)=>{%>
        <span>
            <a href="/perfil/<%=amigo.ID%>">
                <img src="<%= amigo.img %>" height="50" alt="foto de perfil de <%- amigo.userName %>">
                <%= amigo.UserName %>
            </a>
            <a href="/amigos/solicitar/<%=amigo.ID%>">Enviar solicitud</a>
        </span>
        <br>
        <% });%>
    <% } %>
</div>
